---
interface Props {
    title: string;
    image: string;
    description: string;
    href: string
}
const  { title, image, description, href } = Astro.props
---

    <a  href={href}>
      <img class=" hover:shadow-2xl" width={720} height={360} src={image} alt={title} />
      <h3 class="text-2xl mt-2 m-0  text-center font-semibold uppercase">{title}</h3>
      <h4 class="text-black  hover:text-blue-500 text-xl text-center">
        {description}
      </h4>
    </a>


  