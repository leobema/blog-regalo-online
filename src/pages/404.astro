---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
		<div class="grid h-screen place-content-center bg-white px-4">
            <div class="text-center">
              <h1 class="text-9xl font-black text-gray-200">404</h1>
          
              <p class="text-2xl font-bold tracking-tight text-gray-900 sm:text-4xl">Oh-oh!</p>
          
              <p class="mt-4 text-gray-500">Ocurrió un error, no se encontra disponible la página.</p>
          
              <a
                href="/"
                class=" mt-6 inline-block rounded bg-indigo-600 px-5 py-3 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring"
              >
                Regresar
              </a>
            </div>
          </div>

</html>